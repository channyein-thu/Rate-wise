{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "removeComments": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Node.js */
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "uploads", "dist"]
}
